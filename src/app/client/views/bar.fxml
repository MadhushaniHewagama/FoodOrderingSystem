<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.shape.Circle?>

<HBox alignment="TOP_RIGHT" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.client.controllers.CloseMinimizeController">
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <children>
      <Circle fill="#ff981f" onMouseClicked="#min" radius="7.0" stroke="#ffc013" strokeType="INSIDE">
         <HBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </HBox.margin>
      </Circle>
      <Circle fill="#ff1f1f" onMouseClicked="#close" radius="7.0" stroke="#f50505" strokeType="INSIDE">
         <HBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </HBox.margin>
      </Circle>
   </children>
</HBox>
